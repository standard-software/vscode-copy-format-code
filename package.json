{
  "name": "vscode-copy-format-code",
  "displayName": "Copy Format Code",
  "description": "This extension can be copied with code headers and other decorations.",
  "version": "0.2.0",
  "icon": "vscode-copy-format-code_icon.png",
  "publisher": "SatoshiYamamoto",
  "author": {
    "name": "Satoshi Yamamoto",
    "email": "standard.software.net@gmail.com",
    "url": "https://www.facebook.com/stndardsoftware"
  },
  "license": "MIT",
  "homepage": "https://github.com/standard-software/vscode-copy-format-code",
  "repository": {
    "type": "git",
    "url": "https://github.com/standard-software/vscode-copy-format-code"
  },
  "bugs": {
    "url": "https://github.com/standard-software/vscode-copy-format-code/issues"
  },
  "engines": {
    "vscode": "^1.89.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copy",
    "format",
    "code"
  ],
  "enabledApiProposals": [
    "quickPickSeparators"
  ],
  "scripts": {
    "lint": "npx eslint",
    "lintfix": "npx eslint --fix",
    "pack": "npx -y vsce package && code --install-extension vscode-copy-format-code-0.1.1.vsix",
    "": ""
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "eslint": "^9.3.0",
    "globals": "^15.3.0"
  },
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CopyFormatCode",
      "properties": {
        "CopyFormatCode.CopyFormat": {
          "type": "array",
          "default": [
            {
              "label": "Header RelativePath",
              "format": {
                "header": "%ProjectName%/%FilePathRelativeSlash%",
                "body": "%Line%",
                "footer": ""
              }
            },
            {
              "label": "Header RelativePath Body LineNumber",
              "format": {
                "header": "%ProjectName%/%FilePathRelativeSlash%",
                "body": "%LineNumberFile%: %Line%",
                "option": {
                  "lineNumber": true
                }
              }
            },
            {
              "label": "Markdown",
              "format": {
                "header": "```%FileExt%¥n// %ProjectName%/%FilePathRelativeSlash% : %LineNumberStart%-%LineNumberEnd%",
                "body": "%Line%",
                "footer": "```"
              }
            },
            {
              "label": "Markdown LineNumber",
              "format": {
                "header": "```%FileExt%¥n// %ProjectName%/%FilePathRelativeSlash% : %LineNumberStart%-%LineNumberEnd%",
                "body": "%LineNumberFile%: %Line%",
                "footer": "```",
                "option": {
                  "lineNumber": true
                }
              }
            },
            {
              "label": "Test",
              "items": [
                {
                  "label": "Output Header Value",
                  "format": {
                    "header": "%FilePathFull%\n%FilePathFullSlash%\n%FileName%\n%FileExt%\n%FileNameWithoutExt%\n%FolderPath%\n%FolderPathSlash%\n%FolderName%\n%FilePathRelative%\n%FilePathRelativeSlash%\n%ProjectFolderPath%\n%ProjectFolderPathSlash%\n%ProjectName%\n%LineNumberStart%\n%LineNumberStartZeroPad%\n%LineNumberEnd%\n",
                    "body": "%LineNumberFile%: %Line%",
                    "option": {
                      "lineNumber": true
                    }
                  }
                },
                {
                  "label": "Delete Indent",
                  "items": []
                },
                {
                  "label": "Delete Indent and BlankLine",
                  "items": []
                }
              ]
            },
            {
              "label": "Delete Indent and BlankLine",
              "items": [
                {
                  "label": "Delete BlankLine",
                  "items": []
                },
                {
                  "label": "Delete Indent",
                  "items": []
                },
                {
                  "label": "Delete Indent and BlankLine",
                  "items": []
                }
              ]
            }
          ],
          "description": ""
        }
      }
    },
    "commands": [
      {
        "command": "vscode-copy-format-code.SelectFormat",
        "title": "Copy Format Code : Select Format..."
      }
    ],
    "keybindings": []
  }
}
